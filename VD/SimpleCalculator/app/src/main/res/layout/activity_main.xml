<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F8FA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các phép toán số học"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="40dp" />

        <!-- Hàng a -->
        <LinearLayout
            android:id="@+id/row_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:text="a ="
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginEnd="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/a_variable"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/bg_edittext_circle"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Hàng b -->
        <LinearLayout
            android:id="@+id/row_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="28dp">

            <TextView
                android:text="b ="
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginEnd="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/b_variable"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/bg_edittext_circle"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Các nút -->
        <LinearLayout
            android:id="@+id/button_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/button_plus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="18dp"
                android:backgroundTint="#FFB6C1"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="18dp"
                android:backgroundTint="#81D4FA"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

            <Button
                android:id="@+id/button_multi"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="18dp"
                android:backgroundTint="#AED581"
                android:text="×"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="#FFA500"
                android:text="÷"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />
        </LinearLayout>

        <!-- Kết quả -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="Kết quả:"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginEnd="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/result_variable"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext_circle"
                android:enabled="false"
                android:inputType="numberDecimal"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
