<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Project" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/tech_bg_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondaryContainer">@color/tech_selection_bg</item>
        <item name="colorOnSecondaryContainer">@color/tech_neon</item>
        <item name="android:statusBarColor">@color/tech_bg_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/tech_bg_dark</item>
        <item name="colorSurface">@color/tech_bg_dark</item>
        <item name="android:textColor">@color/white</item>

        <item name="colorButtonNormal">@color/tech_neon</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>

    </style>

    <style name="Theme.Project" parent="Base.Theme.Project" />

    <style name="AnswerButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#00BCD4</item>
    </style>

    <style name="ProfileInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#B0BEC5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>