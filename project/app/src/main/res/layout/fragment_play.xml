<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2027"
    android:padding="16dp"
    tools:context=".fragment.PlayFragment">

    <TextView
        android:id="@+id/tvQuestionCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Question: 1/15"
        android:textColor="#B0BEC5"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Score: 0"
        android:textColor="#00E5FF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_tech"
        app:backgroundTint="@null"
        android:gravity="center"
        android:text="30"
        android:textColor="#FFD700"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionCount" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#203A43"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimer">

        <TextView
            android:id="@+id/tvQuestionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Trong Java, từ khóa nào được sử dụng để ngăn cản việc kế thừa một lớp?"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:lineSpacingExtra="4dp"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnOptionA"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn_tech"
        app:backgroundTint="@null"
        android:text="A. static"
        android:textColor="#FFFFFF"

        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.8"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnOptionB"
        app:layout_constraintTop_toBottomOf="@+id/cardQuestion"
        app:layout_constraintBottom_toTopOf="@+id/btnOptionC" />

    <Button
        android:id="@+id/btnOptionB"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_tech"
        app:backgroundTint="@null"
        android:text="B. final"
        android:textColor="#FFFFFF"

        app:layout_constraintStart_toEndOf="@+id/btnOptionA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnOptionA" />

    <Button
        android:id="@+id/btnOptionC"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_tech"
        app:backgroundTint="@null"
        android:text="C. abstract"
        android:textColor="#FFFFFF"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnOptionD"
        app:layout_constraintTop_toBottomOf="@+id/btnOptionA"
        app:layout_constraintBottom_toTopOf="@+id/layoutLifelines" />

    <Button
        android:id="@+id/btnOptionD"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_tech"
        app:backgroundTint="@null"
        android:text="D. private"
        android:textColor="#FFFFFF"

        app:layout_constraintStart_toEndOf="@+id/btnOptionC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnOptionC" />

    <LinearLayout
        android:id="@+id/layoutLifelines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnHelp5050"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_tech"
            app:backgroundTint="@null"
            android:contentDescription="Trợ giúp 50/50"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_crop"
            app:tint="#FF9800" />

        <ImageButton
            android:id="@+id/btnHelpDocs"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_tech"
            app:backgroundTint="@null"
            android:contentDescription="Trợ giúp tham khảo"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#00E5FF" />

        <ImageButton
            android:id="@+id/btnHelpSwitch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/btn_tech"
            app:backgroundTint="@null"
            android:contentDescription="Trợ giúp đổi câu hỏi"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_rotate"
            app:tint="#4CAF50" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>