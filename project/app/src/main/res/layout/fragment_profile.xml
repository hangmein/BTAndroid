<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HỒ SƠ CỦA TÔI"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:id="@+id/profileInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/bg_tech"
        app:layout_constraintTop_toBottomOf="@id/tvProfileTitle"
        android:layout_marginTop="20dp">

        <TextView style="@style/ProfileInfoText" android:text="Tên đăng nhập: NghiaHD"/>
        <TextView style="@style/ProfileInfoText" android:text="Email: user@example.com"/>
        <TextView style="@style/ProfileInfoText" android:text="Ngày tham gia: 01/01/2023"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvHighScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm cao nhất: 9999"
        android:textColor="#00E5FF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="#1A2C35"
        app:layout_constraintTop_toBottomOf="@id/profileInfoLayout"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐĂNG XUẤT"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvHighScore"
        android:backgroundTint="#FF4081"
        android:textColor="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>