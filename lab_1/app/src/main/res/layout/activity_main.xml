<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background_layout"
        android:layout_width="478dp"
        android:layout_height="348dp"
        android:background="@drawable/background_gereral"
        tools:layout_editor_absoluteX="-22dp"
        tools:layout_editor_absoluteY="-27dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="187dp"
            android:layout_height="77dp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="212dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textSize="38sp"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="5dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="74dp"
                android:layout_height="5dp"
                android:background="@drawable/item_vertical_bar_pink"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="59dp">

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="390dp"
        android:layout_height="71dp"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="326dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/item_email"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="30dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="2dp"
            android:layout_height="8dp"
            android:background="@drawable/item_bar"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="34dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="370dp"
            android:layout_height="36dp"
            android:backgroundTint="#FF8383"
            android:ems="10"
            android:hint="          demo@email.com"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="22dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="343dp"
        android:layout_height="49dp"
        android:backgroundTint="#FF8383"
        android:text="Create Account"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="728dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="390dp"
        android:layout_height="71dp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="598dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="358dp"
            android:layout_height="71dp"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="452dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="331dp"
                android:layout_height="36dp"
                android:ems="10"
                android:hint="          enter your password"
                android:inputType="textPassword"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="23dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/item_icon_password"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="32dp">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="2dp"
                android:layout_height="8dp"
                android:background="@drawable/item_bar2"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="36dp">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/item_eye"
                tools:layout_editor_absoluteX="326dp"
                tools:layout_editor_absoluteY="32dp">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="370dp"
            android:layout_height="36dp"
            android:backgroundTint="#BDBDBD"
            android:ems="10"
            android:hint="          confirm your password"
            android:inputType="textPassword"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="23dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/item_icon_password"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="32dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="2dp"
            android:layout_height="8dp"
            android:background="@drawable/item_bar2"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="36dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/item_eye"
            tools:layout_editor_absoluteX="367dp"
            tools:layout_editor_absoluteY="32dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="390dp"
        android:layout_height="71dp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="507dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="370dp"
            android:layout_height="36dp"
            android:backgroundTint="#BDBDBD"
            android:ems="10"
            android:hint="          enter your password"
            android:inputType="textPassword"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="23dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/item_icon_password"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="32dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="2dp"
            android:layout_height="8dp"
            android:background="@drawable/item_bar2"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="36dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/item_eye"
            tools:layout_editor_absoluteX="367dp"
            tools:layout_editor_absoluteY="32dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="390dp"
        android:layout_height="71dp"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="422dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone no"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/item_phone"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="30dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="2dp"
            android:layout_height="8dp"
            android:background="@drawable/item_bar"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="34dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="370dp"
            android:layout_height="36dp"
            android:backgroundTint="#FF8383"
            android:ems="10"
            android:hint="          +00 000-0000-000"
            android:inputType="phone"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="21dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account! "
        android:textColor="#9E9E9E"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="790dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#FF8383"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="790dp" />

</androidx.constraintlayout.widget.ConstraintLayout>